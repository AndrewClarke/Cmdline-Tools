
unalias l lm L LM ll la ls 2>&-

export __LS_FLAGS=

function l+ { export __LS_FLAGS=-L; }
function l- { export __LS_FLAGS=; }

ls() { LANG=C /bin/ls $__LS_FLAGS --color=never "$@"; }
l()  { LANG=C /bin/ls $__LS_FLAGS -Fla --color=auto "$@"; }
lm() { l "$@" | less;    }
L()  { l -d "$@";        }
LM() { L "$@" | less;    }

li() { { l 2>&- "$@" *.@(rb|sh|ksh|py|pl|pm|html|rhtml|erb|css|js|rcss|scss|haml) || echo No interesting files.; } | less; }

