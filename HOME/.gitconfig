
[user]
name = Andrew Clarke
email = aclarke@tickitsystems.com.au

[alias]
duff = !git diff --patience --minimal -w --word-diff=color --

# list to branch
ltb = !git log --abbrev-commit HEAD --not $(git for-each-ref --format='%(refname:short)' refs/heads | grep -v "^$(git symbolic-ref -q --short HEAD)$")

[color]
branch = auto
diff = always
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow
frag = cyan bold
func = cyan
old = magenta bold
new = green

[color "status"]
added = yellow
changed = green
untracked = cyan

[diff]
wordRegex = "#.*$|:?'(\\\\.|[^'])*'|:?\"(\\\\.|[^\"])*\"|`(\\\\.|[^`])*`|:?(\\$|@|@@)[_[:alpha:]][_[:alnum:]]+|:?[_[:alpha:]][_[:alnum:]]+[?!=]?|[_[:alpha:]][_[:alnum:]]+:|\\$.|\\$-[[:alpha:]]|[-+]?[[:digit:]]+(\\.[[:digit:]]+)?([eE][-+]?[[:digit:]])?|[-+*/%&|^<=>!]=|[=!]~|\\*\\*|<<|>>|<=>|&&|\\|\\||\\.\\.|\\.\\.\\.|(==|\\*\\*|<<|>>|&&|\\|\\|)=|\\[[[:space:]]*\\]|\\{[[:space:]]*\\}|\\([[:space:]]*\\)|[^[:space:]]"
algorithm = patience

[push]
default = simple

